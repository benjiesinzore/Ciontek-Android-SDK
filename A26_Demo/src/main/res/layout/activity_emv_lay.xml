<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/emvTips"
        android:textColor="@color/myellow"
        android:textSize="32sp" />

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result : "
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/tvEmvMsg"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_msg"
        android:text="..."
        android:textColor="@color/colorAccent"
        android:textSize="28sp"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <Button
            android:onClick="onClickTestEmv"
            android:id="@+id/btn_emv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_button"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:textAllCaps="false"
            android:text="Emv Test" />

        <Button
            android:onClick="onClickShowPad"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_button"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="Dukpt-Pblock" />

    </LinearLayout>

    <Button
        android:layout_margin="10dp"
        android:onClick="onClickTestPK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/black"
        android:text="Test Emv PK"
        android:textSize="28sp"
        android:visibility="gone"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickAppType"
        android:text="appType"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:background="@drawable/shape_button"
        android:gravity="center"
        android:visibility="gone"
        />



</LinearLayout>